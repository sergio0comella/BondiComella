<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UtenteServlet</servlet-name>
        <servlet-class>it.bondicomella.lido.utente.UtenteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtenteServlet</servlet-name>
        <url-pattern>/home/listaUtenti</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostazoniServelt</servlet-name>
        <servlet-class>it.bondicomella.lido.biglietteria.PostazioneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostazoniServelt</servlet-name>
        <url-pattern>/listaPostazioni</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PrenotazioniServlet</servlet-name>
        <servlet-class>it.bondicomella.lido.biglietteria.PrenotazioneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrenotazioniServlet</servlet-name>
        <url-pattern>/home/listaPrenotazioni</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>it.bondicomella.lido.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>reserved</web-resource-name>
            <url-pattern>/home/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>CLT</role-name>
            <role-name>BGN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>CLT</role-name>
    </security-role>
    <security-role>
        <role-name>BGN</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/WEB-INF/view/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/view/login.jsp?show=logerror</form-error-page>
        </form-login-config>
    </login-config>

</web-app>