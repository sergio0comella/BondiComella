<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UtenteServlet</servlet-name>
        <servlet-class>it.bondicomella.lido.utente.UtenteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtenteServlet</servlet-name>
        <url-pattern>/listaUtenti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UtenteServlet</servlet-name>
        <url-pattern>/addUtente</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostazoniServelt</servlet-name>
        <servlet-class>it.bondicomella.lido.biglietteria.PostazioneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostazoniServelt</servlet-name>
        <url-pattern>/listaPostazioni</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostazoniServelt</servlet-name>
        <url-pattern>/updatePostazione/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PrenotazioniServlet</servlet-name>
        <servlet-class>it.bondicomella.lido.biglietteria.PrenotazioneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrenotazioniServlet</servlet-name>
        <url-pattern>/listaPrenotazioni</url-pattern>
    </servlet-mapping>
</web-app>